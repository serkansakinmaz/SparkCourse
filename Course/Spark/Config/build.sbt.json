libraryDependencies += "org.apache.spark" %% "spark-avro" % "3.2.3"
libraryDependencies += "org.apache.spark" %% "spark-hive" % "3.2.3" % "provided"
libraryDependencies += "org.apache.spark" %% "spark-mllib" % "3.2.3"